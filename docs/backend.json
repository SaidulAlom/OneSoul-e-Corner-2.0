{
  "entities": {
    "NewsArticle": {
      "title": "NewsArticle",
      "type": "object",
      "description": "Represents a news article on the platform.",
      "properties": {
        "title": { "type": "string" },
        "content": { "type": "string" },
        "author": { "type": "string" },
        "publicationDate": { "type": "string", "format": "date-time" },
        "imageUrl": { "type": "string", "format": "uri" },
        "category": { "type": "string" },
        "status": { "type": "string", "enum": ["New", "Urgent", "Standard"] }
      },
      "required": ["title", "content", "author", "publicationDate", "imageUrl", "category", "status"]
    },
    "JobPosting": {
      "title": "JobPosting",
      "type": "object",
      "description": "Represents a job posting.",
      "properties": {
        "title": { "type": "string" },
        "company": { "type": "string" },
        "location": { "type": "string" },
        "description": { "type": "string" },
        "postedDate": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "company", "location", "description", "postedDate"]
    },
    "Vlog": {
      "title": "Vlog",
      "type": "object",
      "description": "Represents a vlog or video tutorial.",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "videoUrl": { "type": "string", "format": "uri" },
        "thumbnailUrl": { "type": "string", "format": "uri" },
        "publishedDate": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "description", "videoUrl", "thumbnailUrl", "publishedDate"]
    },
    "EBook": {
      "title": "EBook",
      "type": "object",
      "description": "Represents an e-book.",
      "properties": {
        "title": { "type": "string" },
        "author": { "type": "string" },
        "description": { "type": "string" },
        "coverImageUrl": { "type": "string", "format": "uri" },
        "downloadUrl": { "type": "string", "format": "uri" }
      },
      "required": ["title", "author", "description", "coverImageUrl", "downloadUrl"]
    },
    "ProfessionalService": {
      "title": "ProfessionalService",
      "type": "object",
      "description": "Represents a professional service offered.",
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "description": { "type": "string" },
        "features": { "type": "array", "items": { "type": "string" } },
        "icon": { "type": "string" },
        "startingPrice": { "type": "number" }
      },
      "required": ["title", "subtitle", "description", "features", "icon", "startingPrice"]
    },
    "AdminRole": {
       "title": "AdminRole",
       "type": "object",
       "description": "A document indicating a user has admin privileges.",
       "properties": {
          "isAdmin": {
            "type": "boolean",
            "description": "Must be true to grant admin rights."
          }
       },
       "required": ["isAdmin"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/news_articles/{newsArticleId}",
        "definition": {
          "schema": { "$ref": "#/entities/NewsArticle" },
          "description": "Stores news articles. Publicly readable, admin-only writes."
        }
      },
      {
        "path": "/job_postings/{jobPostingId}",
        "definition": {
          "schema": { "$ref": "#/entities/JobPosting" },
          "description": "Stores job postings. Publicly readable, admin-only writes."
        }
      },
      {
        "path": "/vlogs/{vlogId}",
        "definition": {
          "schema": { "$ref": "#/entities/Vlog" },
          "description": "Stores vlogs. Publicly readable, admin-only writes."
        }
      },
      {
        "path": "/ebooks/{ebookId}",
        "definition": {
          "schema": { "$ref": "#/entities/EBook" },
          "description": "Stores e-books. Publicly readable, admin-only writes."
        }
      },
      {
        "path": "/services/{serviceId}",
        "definition": {
          "schema": { "$ref": "#/entities/ProfessionalService" },
          "description": "Stores professional services. Publicly readable, admin-only writes."
        }
      },
      {
        "path": "/roles_admin/{uid}",
        "definition": {
          "schema": { "$ref": "#/entities/AdminRole" },
          "description": "Grants admin privileges. Locked down from client access."
        }
      }
    ]
  }
}
